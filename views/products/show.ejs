<h1><%= product.name %></h1>
<img src="<%= product.imageUrl %>">
<h3>Price: <span>$<%= product.price %></span></h3>
<p><%= product.description %></p>

<form action="/products/<%= product._id %>/reviews" method="POST">
  <label for="author">Email Address</label>
  <input type="text" name="author" id="author">

  <label for="author">Stars</label>
  <input type="number" name="stars" id="stars">

  <label for="content">Content</label>
  <textarea name="content" rows="3" cols="80"></textarea>

  <button type="submit">Submit Review</button>
</form>

<ul>
  <% product.reviews.forEach( (review) => { %>
    <li><%= review.author %> - <%= review.stars %> </li>
  <% }) %>
</ul>